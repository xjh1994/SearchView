<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlSearch"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_weight="1"
        android:background="@drawable/followup_search_back">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/searchview_ic_search"
            android:drawablePadding="6dp"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/hint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:padding="6dp"
            android:src="@drawable/searchview_ic_clear"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pbLoading"
            style="?android:progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:indeterminateDrawable="@drawable/searchview_loading"
            android:padding="4dp"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:src="@drawable/searchview_ic_cancel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/searchview_cancel"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</merge>